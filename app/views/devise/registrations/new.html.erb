<div class="logo-other">
<%= image_tag 'compass-logo.jpg', size: '150x150' %>
</div>

<h2 id='create_account'>Create Account</h2>

<div class='container'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="field small-10 small-centered columns">
    <%= f.text_field :first_name, placeholder: "First Name" %>
    </div>
  </div>

  <div class="row">
    <div class="field small-10 small-centered columns">
    <%= f.text_field :last_name, placeholder: "Last Name" %>
    </div>
  </div>

  <div class="row">
    <div class="field small-10 small-centered columns">
    <%= f.text_field :email, placeholder: "Email" %>
    </div>
  </div>

  <div class="row">
    <div class="field small-10 small-centered columns">
    <%= f.password_field :password, placeholder: "Password" %>
    </div>
  </div>

  <div class="row">
    <div class="field small-10 small-centered columns">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
    </div>
  </div>

  <div class="row">
    <div class="input-group-button">
    <input type="submit" class="button small-8 small-centered columns" value="Create Account">
  </div>
  </div><br/>
<% end %>

</div>
