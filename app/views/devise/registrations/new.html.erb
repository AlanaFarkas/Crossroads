<div class='container'>
<h2 id='create_account'>Create your crossroads account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>  

  <div class="row">
    <div class="field small-10 small-centered columns"> 
      <input type="text" name="user[first_name]", placeholder="First Name">  
    </div>
  </div>
  
  <div class="row">
    <div class="field small-10 small-centered columns"> 
      <input type="text" name="user[last_name]", placeholder="Last Name">  
    </div>
  </div>

  <div class="row">
    <div class="field small-10 small-centered columns"> 
      <input type="text" name="user[email]", placeholder="Email">  
    </div>
  </div>

  <div class="row">
    <div class="field small-10 small-centered columns">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters min. with a capital letter and digit)</em>
      <% end %><br /> 
      <input type="text" name="user[password]", placeholder="Password">  
    </div>
  </div>

  <div class="row">
    <div class="field small-10 small-centered columns"> 
      <input type="text" name="user[password_confirmation]" autocomplete="off" , placeholder="Confirm Password">  
    </div>
  </div>


  <div class="row">
    <div class="input-group-button">
    <input type="submit" class="button small-6 small-centered columns" value="Log In">
  </div>
  </div><br/>
<% end %>

<%= render "devise/shared/links" %>
</div>
