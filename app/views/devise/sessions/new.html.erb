<!-- <div class="logo-other"> -->
<div class="container login-top">
  <div class="row">
    <div class="small-5 small-centered large-2 large-centered columns">
    <%= image_tag 'compass-logo.jpg', size: '150x150' %>
    </div>
  </div>
  <div class="row">
    <div class="small-10 small-centered large-2 large-centered columns">
    <h2>Log in</h2>
    </div>
  </div>
</div>


<div class="container">


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  <%- end -%>
<!-- EMAIL INPUT FIELD -->
  <div class="row">
    <div class="field small-10 small-centered columns">
      <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
    </div>
  </div>

  <!-- PASSWORD INPUT FIELD -->
  <div class="row">
    <div class="field small-10 small-centered columns">
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
    </div>
  </div>

<%# end -%>
<!-- SUBMIT BUTTON -->
  <div class="row">
    <div class="input-group-button">
    <input type="submit" class="button small-8 small-centered columns" value="Log In">
  </div>
  </div><br/>

<% end %>

<%= render "devise/shared/links" %>
</div>
