<h2>Log in</h2>
<div class="container">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  <%- end -%>
<!-- EMAIL INPUT FIELD -->
  <div class="row">
    <div class="field small-10 small-centered columns">
      <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <!-- PASSWORD INPUT FIELD -->
  <div class="row">
    <div class="field small-10 small-centered columns">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>

<%# if devise_mapping.rememberable? -%>

<!-- 'REMEMBER ME' TOGGLE -->
<!-- <div class="switch small-8 columns">
  <input class="switch-input" id="user_remember_me" type="checkbox" name="user[remember_me]" value="1" checked>
  <label class="switch-paddle" for="user_remember_me">
  </label>
</div> -->

<%# end -%>
<!-- SUBMIT BUTTON -->
  <div class="row">
    <div class="input-group-button">
    <input type="submit" class="button small-8 small-centered columns" value="Log In">
  </div>
  </div><br/>

<% end %>

<%= render "devise/shared/links" %>
</div>
